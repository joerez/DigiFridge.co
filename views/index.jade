extends ./layout
block head
  title Hey
  link(href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" rel="stylesheet")
  link(href='index.css' rel='stylesheet')
  script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js")
  script(src='index.js')
  
block body
  h1.go hey
    
  center  
    .myDiv
      h3.titleText Sentence Maker 
      form(method="Post")
        input#inputone(placeholder="Put Paragraph Here" name="paragraph")
        button.btn.btn-primary#subButton(type ="submit") Submit

  .section2
    each paragraph in paragraphs
      .parabox
        p.paratext= paragraph.text
 
